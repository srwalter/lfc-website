@model IEnumerable<LFC.Models.ActiveAlert>

<h3>Maintenance Alerts</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AirplaneID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.AirplaneID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Mute Alert", "Delete", new { type=item.Type, airplane = item.AirplaneID })
            </td>
        </tr>
    }
    
    </table>