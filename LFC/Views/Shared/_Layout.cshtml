<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lexington Flying Club</title>
    @Styles.Render("~/Content/bootstrap/css/bootstrap.css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
        </div>
        <div class="navbar-collapse collapse container-fluid">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Join", "Join", "Home")</li>
                    <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                    <li><a href="http://www.lexingtonflyingclub.org/Content/newsletter/2015_08_lfc_newsletter_v1_0.html">Newsletter</a></li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Bylaws", "Bylaws", "Home")</li>
                    <li>@Html.ActionLink("Members Area", "Index", "MembersArea")</li>
                    <li><a href="https://my.schedulemaster.com/">Schedule Master</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
        </div>
            </div>
    </nav>
    <img src="~/Content/logo_small.gif" class="visible-xs" />
    <img src="~/Content/logo.gif" class="hidden-xs" />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <address class="text-center">
                <strong>Lexington Flying Club</strong><br>
                P.O. Box 863, Post Rider Station<br>
                Lexington, KY 40588<br>
            </address>
    </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        $(document).ready(function () {
            var url = window.location.pathname;
            if (url == '/') {
                return;
            }
            var substr = url.split('/');
            var urlaspx = substr[substr.length - 1];
            $('.nav').find('.active').removeClass('active');
            $('.nav li a').each(function () {
                if (this.href.indexOf(urlaspx) >= 0) {
                    $(this).parent().addClass('active');
                }
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
