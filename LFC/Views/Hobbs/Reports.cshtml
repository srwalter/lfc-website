@model LFC.ViewModels.ReportViewModel

@{
    ViewBag.Title = "Reports";
}

<h2>Reports</h2>

<p class="text-danger">
    @ViewBag.Message
</p>

@Html.Partial("_BillingReports", Model.Billing)
@Html.Partial("_FlyingReports", Model.Flying)

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.Hidden("send", true)
            <input type="submit" value="Send Reports" class="btn btn-default" />
        </div>
    </div>
}